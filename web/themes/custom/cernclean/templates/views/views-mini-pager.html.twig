{#
/**
 * @file
 * Theme override for a views mini-pager to override the base one.
 *
 * Available variables:
 * - items: List of pager items.
 *
 * @ingroup templates
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
    <nav role="navigation" aria-labelledby="pagination-heading" class="pagination-container centered">
        <h4 class="sr-only">{{ 'Pagination'|t }}</h4>
        <ul class="pagination centered mini-pager">
            {% if items.previous %}
                <li class="page-item page__item--previous">
                    <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
                        <span class="visually-hidden">{{ 'Previous page'|t }}</span>
                        {# <span class="page-link" aria-hidden="true">{{ items.previous.text|default('Previous'|t) }}</span> #}
                        <span class="page-link" aria-hidden="true">{{ 'Previous'|t }}</span>
                    </a>
                </li>
            {% endif %}
            {% if items.next %}
                <li class="page-item page__item--next">
                    <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
                        <span class="visually-hidden">{{ 'Next page'|t }}</span>
                        {# <span class="page-link" aria-hidden="true">{{ items.next.text|default('Next'|t) }}</span> #}
                        <span class="page-link" aria-hidden="true">{{ 'Next'|t }}</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
